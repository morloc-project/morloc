--' System configuration
--' metavar: SYS_CONFIG
--' unroll: true
--' arg: --sys-config
record SysConfig where
  --' tmp directory
  --' arg: --tmp-dir
  --' metavar: FILE
  --' default: "/tmp"
  --' literal: true
  tmpDir :: Str

  --' number of threads to use
  --' arg: -t/--threads
  --' metavar: INT
  --' default: 1
  numThreads :: Int

  --' clean out caches before running?
  --' true:  --clean
  --' false: --no-clean
  --' default: false
  removeCaches :: Bool


--' Algorithm configuration
--' metavar: ALG_CONFIG
--' unroll: true
--' arg: --alg-config
record AlgConfig where
  --' some hyper parameter
  --' arg: -m
  --' default: 0
  m :: Int

  --' some other hyper parameter
  --' arg: -n/--nosy
  --' default: 0
  n :: Int

record Py => SysConfig = "dict"
record Py => AlgConfig = "dict"

