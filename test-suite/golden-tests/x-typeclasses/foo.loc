source py from "xxx.py" ("mlc_add" as pyadd, "mlc_mul" as pymul, "mlc_neg" as pyneg, "mlc_rec" as pyrec)

class (Numeric a)
    add :: a -> a -> a
    mul :: a -> a -> a
    neg :: a -> a
    rec :: a -> a & err
    -- default implementations
    sub x y = add x (neg y) 
    div x y = mul x (rec y)

class (Exponentiable a)
    pow :: a -> a -> a
    log :: a -> a -> a & err

class (Continuous a)
    exp :: a -> a -> a
    log :: a -> a -> ?a

class (Enum a)
    succ a -> a

instance py Numeric "int"
    add = mlc_add
    mul = mlc_mul
    neg = mlc_neg
    rec = mlc_rec

instance py Numeric "float"
    add = mlc_add
    mul = mlc_mul
    neg = mlc_neg
    rec = mlc_rec
